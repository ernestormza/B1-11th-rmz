<p id="notice"><%= notice %></p>


<h1>Recipes</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredients</th>
      <th>Preparation</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.preparation %></td>
        <td><%= recipe.image %></td>
          <td><%= link_to '<i class="material-icons">remove_red_eye</i>'.html_safe, recipe, :class => 'btn-floating btn waves-effect waves-light lime' %></td>
        <td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_recipe_path(recipe), :class => 'btn-floating btn waves-effect waves-light lime' %></td>
        <td><%= link_to '<i class="material-icons">delete</i>'.html_safe, recipe, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn-floating btn waves-effect waves-light red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
