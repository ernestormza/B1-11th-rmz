<p id="notice"><%= notice %></p>

<h1>Ideas</h1>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag idea.picture_url(:thumb) if idea.picture? %></td>
        <td><%= link_to '<i class="material-icons">remove_red_eye</i>'.html_safe, idea, :class => 'btn-floating btn waves-effect waves-light lime' %></td>
        <td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_idea_path(idea), :class => 'btn-floating btn waves-effect waves-light lime' %></td>
        <td><%= link_to '<i class="material-icons">delete</i>'.html_safe, idea, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn-floating btn waves-effect waves-light red' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="material-icons left">add</i> New Idea'.html_safe, new_idea_path, :class => 'waves-effect waves-light btn amber' %>

